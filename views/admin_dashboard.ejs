<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head'); -%>

    <body>
        <%- include('./partials/header'); -%>
            <%- include('./partials/admin_menu'); -%>
                <%- include('admin_breadcum'); -%>
                <!-- Contact Start -->
                <div class="container-fluid pt-5">
                    <div class="row">
                        <div class="col-2">
                            <%- include('./partials/admin_left_menu'); -%>
                        </div>
                        <div class="col-10">
                            <table style="width:100%;" id="myTable">
                                <thead>
                                    <tr>
                                        <th>Sr.</th>
                                        <th>Product image</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>discount price</th>
                                        <th>Description</th>
                                        <th>Category</th>
                                        <th>Staus</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% products.forEach((item,index)=> {
                                        %>
                                        <tr>
                                            <td>
                                                <%= index+1 %>
                                            </td>
                                            <td>
                                                <%  
                                                if(item.productImage){
                                                %>
                                                <img src="uploads/<%= item.productImage %>" width="250px;">
                                                <% } %>
                                            </td>
                                            <td>
                                                <%= item.name %>
                                            </td>
                                            <td>
                                                <%= item.price %>
                                            </td>
                                            <td>
                                                <%= item.discount_price %>
                                            </td>
                                            <td>
                                                <%= item.description %>
                                            </td>
                                            <td>                                               
                                                 <%= item.category %>  
                                            </td>
                                            <td>
                                                <%= item.staus %>
                                            </td>
                                            <td> 

                                                <a target="_blank" href="/add_product?id=<%= item.id %>">
                                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                                </a>

                                                <a href="/delete_product?id=<%= item.id %>">
                                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                <tbody>
                            </table>
                        </div>
                    </div>

                </div>
                <!-- Contact End -->
                <%- include('./partials/footer'); -%>
    </body>



</html>