<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head'); -%>

<body>
    <%- include('./partials/header'); -%>
    <%- include('./partials/admin_menu'); -%>
    <%- include('admin_breadcum'); -%>
    <!-- Contact Start -->
    <div class="container-fluid pt-5">
        <div class="row">
            <div class="col-2">
                <%- include('./partials/admin_left_menu'); -%>
            </div>
            <div class="col-10">
                <div class="contact-form"> 
                    <div id="success"></div>
                     <form name="sentMessage" id="productForm" action="add_product_post" enctype="multipart/form-data" method="post"> 
                        <input type="hidden" name="pid" id="pid" value="<%= productsDetails[0].id %>">
                        <div class="control-group">
                            <input type="text" class="form-control" name="name" value="<%= productsDetails[0].name %>" id="name" placeholder="Procut Name"
                                required="required" data-validation-required-message="Please enter your name" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input type="text" class="form-control" name="price"  value="<%= productsDetails[0].price %>" id="price" placeholder="Price"
                                required="required" data-validation-required-message="Please enter your email" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input type="text" class="form-control" name="discount_price"  value="<%= productsDetails[0].discount_price %>" id="discount_price" placeholder="Discount Price"
                                required="required" data-validation-required-message="Price" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <textarea class="form-control" rows="6" name="description"  id="description" placeholder="Description"
                                required="required"
                                data-validation-required-message="Please enter your Description"><%= productsDetails[0].description %></textarea>
                            <p class="help-block text-danger"></p>
                        </div>

                        <div class="form-group">
                            <!-- <input type="text" class="form-control" name="category" id="category" value="category" placeholder="Category"
                                required="required" data-validation-required-message="Please enter your category" /> -->
                                <select required class="form-control" name="category" id="category">
                                    <option value=""> Select Category </option>
                                    <% 
                                    categories.forEach((element,index)=>{
                                    %>
                                    <option value="<%= element.id %>" <% if(productsDetails[0].category==element.id){ %> selected <% } %> >  <%= element.name %>  </option>
                                    <%
                                    })
                                    %>
                                </select>
                        </div>

                        <div class="form-group">
                            <input type="file" class="admin__input" id="myFile" name="myFile" />
                        </div> 

                        <div>
                            <button class="btn btn-primary py-2 px-4" type="submit" id="saveProduct">Save </button>
                        </div>
                     </form> 
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End --> 
    <%- include('./partials/footer'); -%>
</body>
</html>